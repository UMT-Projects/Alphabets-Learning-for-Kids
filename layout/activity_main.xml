<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.alphabetlearningforkids.MainActivity"
    android:weightSum="1">


    <Button
        android:id="@+id/btnTraining"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Learn with Training"

        android:onClick="sendtoLearningWithTraining"
        android:textSize="30sp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btnAtoZ"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="A-Z List"
        android:onClick="sendtoAtoZList"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.07" />

    <Button
        android:id="@+id/btnPuzzle"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Puzzle"
        android:textSize="30sp"
        android:layout_marginTop="40dp" />
</LinearLayout>

